<li class="<%=  self_or_other(message) %>">
  <div class="avatar">
      <% color = message_interlocutor(message).color  %>
    <%= image_tag "http://placehold.it/50x50/#{color}/#{color}" %>
  </div>
  <div class="chatboxmessagecontent">
    <p><%= message.body %></p>
    <time datetime="<%= message.created_at %>" title="<%= message.created_at.strftime("%d %b  %Y at %I:%M%p") %>">
      <%= message_interlocutor(message).name %> • <%= message.created_at.strftime("%H:%M %p") %>
    <% if not message.read and message.user_id == message_interlocutor(message).id%>
        • <b>Not Read</b>
    <% elsif message.read and message.user_id == message_interlocutor(message).id%>
        • Read
    <% end %>
    </time>

  </div>
</li>
